<div class="reforms">
  <div class="container">
    <div class="reforms__inner">
      <h1 class="reforms__title heading-1">Регионы</h1>

      <div
        class="reforms__group reforms__group--full regions__projects-mobile regions__projects-mobile--show-desktop"
      >
        <div
          class="regions__projects-slider swiper-container js-regions-slider"
        >
          <div class="swiper-wrapper">
            <div class="regions__projects-slide swiper-slide">
              <a class="project-card" href="moscow.html">
                <div class="project-card__image">
                  <img src="img/regions/region-moscow.jpg" alt="" />
                </div>
                <div class="project-card__link r-btn r-btn--solid">Москва</div>
              </a>
            </div>
            <div class="regions__projects-slide swiper-slide">
              <a class="project-card" href="st-petersburg.html">
                <div class="project-card__image">
                  <img src="img/regions/region-petersburg.jpg" alt="" />
